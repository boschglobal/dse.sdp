-- test.sh --
DSE_SIMER_IMAGE="${DSE_SIMER_IMAGE:-ghcr.io/boschglobal/dse-simer:latest}"
docker run --name simer -i --rm \
    -v $ENTRYWORKDIR/out/sim:/sim \
    --network=host \
    "${DSE_SIMER_IMAGE}" \
        -env simbus:SIMBUS_LOGLEVEL=4 \
        -stack model \
        -timeout 5 &

./gateway 0.0005 0.005 gw_simulation.yaml signalgroup.yaml model.yaml


-- download-gateway.sh --
if [[ -f gateway ]]; then
    exit 0
fi

ZIP_FILE="Models-$RELEASE_VERSION-linux-amd64"
ZIP_URL="https://github.com/boschglobal/dse.sdp/releases/download/v$RELEASE_VERSION/$ZIP_FILE.zip"
curl -L -o "$ZIP_FILE.zip" "$ZIP_URL"
unzip -o "$ZIP_FILE.zip"
cp "$ZIP_FILE/gateway/bin/gateway" .
cp "$ZIP_FILE/gateway/lib/libmodelc.so" .
